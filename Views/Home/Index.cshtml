@model IEnumerable<Proyecto7.Models.Articulo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        button .a-btn{
            color:white !important;
            text-decoration:none;
        }
        button .a-btn:hover {
                color: black !important;
                
            }
    </style>
</head>
<body>
    
        <button type="button" class="btn btn-primary  m-2">@Html.ActionLink("Agregar artículo", "Create", new { id = "btn"}, new { @class = "a-btn" })</button>
        
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
               <button type="button" class="btn btn-primary btn-sm"> @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, new { @class = "a-btn" }) </button>
               <button type="button" class="btn btn-info btn-sm">@Html.ActionLink("Detalle", "Details", new { id = item.Codigo }, new { @class = "a-btn" }) </button>
               <button type="button" class="btn btn-danger btn-sm">@Html.ActionLink("Borrar", "Delete", new { id = item.Codigo }, new { @class = "a-btn" })</button>
                
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
